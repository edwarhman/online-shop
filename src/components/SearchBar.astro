---
const {search} = Astro.props

interface Props {
    search: string
}

---

<div>
    <form action="/products">
        <input 
        id='input'
        type="text"
        name="search"
        placeholder="Smartphones, Laptops..."
        value={search}
        />
        <button type="submit">Search</button>
    </form>
</div>