---
import RatingStars from './RatingStars.astro'
interface Props {
	id: number
	title: string
	body: string
	href: string
	category: string
	price: number
	score: number
}

const { id, href, title, body, category, price, score } = Astro.props
const { i } = Astro.params
---

<li
	class="group list-none rounded-lg bg-gray-800 from-blue-800 to-cyan-500 bg-bottom p-0 shadow-sm transition ease-in-out hover:bg-gradient-to-r hover:bg-top overflow-hidden"
>
	<a class="w-full" href=`/products/${id}`>
		<div class="overflow-hidden">
			<img class="w-full object-fill group-hover:scale-125" src={href} alt={title} srcset="" />
		</div>
		<div class="[&>p]:mt-3 [&>p]:mb-0 [&>p]:space-y-5 m-3 relative">
			<h2
				class="m-2 text-2xl font-bold transition ease-in-out group-hover:text-yellow-400"
			>
				{title}
			</h2>
			<p>
				{body}
			</p>
			<p>{price}$</p>
			<div class="flex justify-between items-center">
				<p class="bg-purple-400 rounded-lg px-2 py-1 text-sm">
					{category}
				</p>
				<RatingStars rating={score} />
			</div>
		</div>
	</a>
</li>
