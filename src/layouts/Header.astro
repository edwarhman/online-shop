---
import SearchBar from '../components/SearchBar.astro';
import SearchInfo from '../components/SearchInfo.astro';
import Layout from './Layout.astro'
interface Props {
	title: string;
    search: string;
}

const { title, search} = Astro.props;
---

<Layout title={title}>    
    <header class="bg-violet-900 text-white p-3 py-6 space-y-4 md:space-y-0 flex flex-col md:flex-row justify-between items-center">
        <h1 class="font-pacifico col-span-3 text-4xl font-bol"><a href="/">Aeconne Shop</a></h1>
        <SearchBar
            search={search}
        />
    </header>
    <slot />
</Layout>